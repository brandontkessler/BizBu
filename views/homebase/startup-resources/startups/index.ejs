<% include ../../partials/head-open %>
	<link rel="stylesheet" type="text/css" href="/stylesheets/homebase/startup-resources/startups.css">
<% include ../../partials/head-close %>

<div class="grid-container">
  <% include ../../partials/nav/sidebar %>
  <div class="content">
    <ul>
      <% for (let company of companies) { %>
        <li>
          <h2><%= company.name %></h2>
          <h3><%= company.checklist.checklistData.tagline %></h3>
          <h3><%= company.checklist.checklistData.description %></h3>
          <h3><%= company.checklist.checklistData.location %></h3>
          <% if(company.checklist.checklistData.needs && company.checklist.checklistData.needs.length > 0){ %>
            <p>Needs: <%= company.checklist.checklistData.needs.join(", ") %></p>
          <% } %>
          <form action="/homebase/startup-resources/startups/<%= company._id %>/message" method="post">
            <button>Send Message</button>
          </form>
        </li>
      <% } %>
    </ul>


  </div>
</div>


<% include ../../partials/footer %>
