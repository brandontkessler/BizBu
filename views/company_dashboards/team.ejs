<% include ../partials/company/header %>

<div class="content">
	<h1>Team Page</h1>
	<p>Invite more team members to help you build your company</p>
	<a href="/user_profile/<%= currentUser._id %>/company_dashboard/<%= company._id %>/team/invite">Invite to Team</a>


	<div class="admin">
		<h3>These are the admins</h3>
		<% company.admin.forEach(function(user){ %>
			<%= user.name.split(' ')[0] %>
		<% }) %>
	</div>
	<div class="member">
		<h3>These are the members</h3>
		<% company.member.forEach(function(user){ %>
			<%= user.name.split(' ')[0] %>
		<% }) %>
	</div>

	<% let userId = currentUser._id %>
	<% let companyAdmins = company.admin %>

	<% for(let j = 0; j < companyAdmins.length; j++){ %>

		<% if(userId.toString() !== companyAdmins[j]._id.toString()){ %>
			<% continue %>
		<% } %>
		<a href="/user_profile/<%= currentUser._id %>/company_dashboard/<%= company._id %>/team/remove">Remove Member(s)</a>
	<% } %>


	<span id="leave-team-button">Leave the Team</span>

	<div class="leave-team-form-hidden">
		<form action="/user_profile/<%= currentUser._id %>/company_dashboard/<%= company._id %>/team?_method=PUT" method="post">
			<h4>Are you sure??</h4>
			<button>Leave</button>
			<span class="nevermind-leave">Nevermind</span>
		</form>
	</div>


</div>



<% include ../partials/company/footer %>
